{
  "name": "sparql",
  "scopeName": "source.sparql",
  "fileTypes": ["rq", "sparql"],
  "patterns": [
    {
      "name": "keyword.control.sparql",
      "match": "\\b(select|ask|construct|describe|where|order\\s+by|limit|offset|from|graph|union|filter|optional|group\\s+by|having|values|bind|service|minus)\\b",
      "matchFlags": "i"
    },
    {
      "name": "keyword.modifier.sparql",
      "match": "\\b(distinct|reduced|silent|not\\s+exists|exists|in|as)\\b",
      "matchFlags": "i"
    },
    {
      "name": "variable.language.sparql",
      "match": "\\?[a-zA-Z_][\\w-]*"
    },
    {
      "name": "constant.language.sparql",
      "match": "a\\b"
    },
    {
      "name": "support.function.builtin.sparql",
      "match": "\\b(str|lang|langmatches|datatype|bound|iri|uri|bnode|rand|abs|ceil|floor|round|concat|strlen|ucase|lcase|encode_for_uri|contains|strstarts|strends|substr|replace|regex|now|year|month|day|hours|minutes|seconds|timezone|tz|uuid|struuid|md5|sha1|sha256|sha384|sha512|coalesce|if|strlang|strdt|sameterm|isiri|isuri|isblank|isliteral|isnumeric)\\b",
      "matchFlags": "i"
    },
    {
      "name": "constant.language.boolean.sparql",
      "match": "\\b(true|false)\\b",
      "matchFlags": "i"
    },
    {
      "name": "constant.numeric.sparql",
      "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
    },
    {
      "name": "string.quoted.double.sparql",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.sparql",
          "match": "\\\\[nrt\"'\\\\]"
        }
      ]
    },
    {
      "name": "string.quoted.single.sparql",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.sparql",
          "match": "\\\\[nrt\"'\\\\]"
        }
      ]
    },
    {
      "name": "constant.other.iri.sparql",
      "match": "<[^>\\s]+>"
    },
    {
      "name": "entity.name.namespace.prefix.sparql",
      "match": "\\b[a-zA-Z][\\w-]*:"
    },
    {
      "name": "storage.type.datatype.sparql",
      "match": "\\^\\^<[^>]+>|\\^\\^[a-zA-Z_][\\w-]*:[a-zA-Z_][\\w-]*"
    },
    {
      "name": "comment.line.number-sign.sparql",
      "match": "#.*$"
    },
    {
      "name": "punctuation.section.block.sparql",
      "match": "[{}\\[\\]()\\.;,]"
    }
  ]
}
